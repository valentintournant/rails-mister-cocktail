<nav class="navbar navbar-light bg-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "cocktail.svg" %>
  <% end %>
</nav>
<div class="banner-50vh d-flex justify-content-center align-items-center bg-img">
  <div class="text-underline text-brand" id="banner-typed-text"></div>
</div>
<div class="my-grid">
  <% @cocktails.each do |cocktail| %>
    <div class="grid-col d-flex justify-content-center align-items-center">
      <div class="card border">
        <div class="card-img-top">
          <% unless cocktail.photo.attachment.nil? %>
            <%= cl_image_tag cocktail.photo.key, width: 300, height: 260%>
          <% end %>
        </div>
        <div class="card-body" style="border-radius: 50px">
          <h5 class="card-title"><%= cocktail.name %></h5>
          <%= link_to cocktail_path(cocktail) do %>
            <div class="btn btn-primary">View the doses</div>
          <% end %>
          <%= link_to cocktail_path(cocktail), method: :delete, data: { confirm: 'Are you sure?' } do %>
            <div class="btn btn-danger">Delete</div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="d-flex justify-content-center align-items-center mt-5">
  <%= link_to 'New Cocktail', new_cocktail_path, class: "btn btn-gradient" %>
</div>

<div class="footer d-flex justify-content-center align-items-center mt-2">
    <div class="footer-links" style="margin-top: 10px">
      <a href="#"><i class="fab fa-github"></i></a>
      <a href="#"><i class="fab fa-instagram"></i></a>
      <a href="#"><i class="fab fa-facebook"></i></a>
      <a href="#"><i class="fab fa-twitter"></i></a>
      <a href="#"><i class="fab fa-linkedin"></i></a>
    </div>
  </div>
</div>
